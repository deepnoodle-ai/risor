// Example Risor program for testing language server features
// This file demonstrates various Risor language constructs

// Configuration object
let config = {
    "host": "localhost",
    "port": 8080,
    "debug": true,
    "timeout": 30.5
}

// Simple function
let greet = func(name) {
    if (name == "") {
        return "Hello, World!"
    }
    return sprintf("Hello, %s!", name)
}

// Function with multiple parameters
let calculate = func(operation, a, b) {
    if (operation == "add") {
        return a + b
    } else if (operation == "subtract") {
        return a - b
    } else if (operation == "multiply") {
        return a * b
    } else if (operation == "divide") {
        if (b == 0) {
            return "Division by zero error"
        }
        return a / b
    }
    return "Unknown operation"
}

// Array operations using functional style
let numbers = [1, 2, 3, 4, 5]
let doubled = numbers | map(func(n) { n * 2 })

// Object manipulation
let person = {
    "name": "Alice",
    "age": 30,
    "email": "alice@example.com"
}

// Test various builtins
println("Config:", config)
println("Numbers length:", len(numbers))
println("Doubled:", doubled)
println("Greeting:", greet("Developer"))
println("Calculation:", calculate("add", 10, 5))

// String manipulation
let message = "   Hello, Risor!   "
let trimmed = strings.trim_space(message)
let upper = strings.to_upper(trimmed)
println("Processed message:", upper)

// Error handling example
let safe_divide = func(a, b) {
    if (b == 0) {
        return nil, "cannot divide by zero"
    }
    return a / b, nil
}

let result, err = safe_divide(10, 2)
if (err != nil) {
    println("Error:", err)
} else {
    println("Result:", result)
}

// Functional operations on lists
let squares = [1, 2, 3, 4, 5] | map(func(i) { i * i })
println("Squares:", squares)

let evens = numbers | filter(func(n) { n % 2 == 0 })
println("Evens:", evens)

// Dictionary access examples
let name = person["name"]
let age = person["age"]
println("Person info:", name, age)

// Match expression
let get_day_type = func(day) {
    match day {
        "Saturday" => "weekend"
        "Sunday" => "weekend"
        _ => "weekday"
    }
}
println("Monday is a:", get_day_type("Monday"))
println("Saturday is a:", get_day_type("Saturday"))
